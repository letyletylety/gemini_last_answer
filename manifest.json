{
    "manifest_version": 3,
    "name": "Gemini Copy & Notify",
    "version": "2.0.0",
    "description": "Gemini 응답을 마크다운으로 복사하고, 완료 시 알림음을 재생합니다.",
    "permissions": [
        "scripting",
        "clipboardWrite",
        "storage"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "commands": {
        "copy_last_response": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "Ctrl+Shift+C"
            },
            "description": "Copy last gemini's response"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "turndown.js",
                "turndown-plugin-gfm.js"
            ],
            "matches": [
                "https://gemini.google.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}